#!/bin/sh
# A small script to put i3 up and running

# Set keyboard layout to pt_BR
setxkbmap -layout br
# Set Num Lock active
numlockx &
# Removes the system bell
xset -b
# Gets the style of the system
xrdb ~/.Xresources
#loopBg Wallpapers & #loopBg isn't working

